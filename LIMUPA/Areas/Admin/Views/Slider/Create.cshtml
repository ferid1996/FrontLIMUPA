@model SliderDTO
@{
   ViewData["Title"] = "Index";
}
<form method="post" asp-area="Admin" asp-controller="Slider" asp-action="Create" enctype="multipart/form-data">
  <div class="form-group">
    <label for="title">Name</label>
    <input asp-for=@Model.Title   type="text" class="form-control" id="title"  placeholder="Title">
    <span asp-validation-for=@Model.Title class="text-danger"></span>

  </div> 
  
  <div class="form-group">
    <label for="text">Slider Text</label>
    <textarea asp-for=@Model.Text class="form-control" id="text"  rows="3"></textarea>
     <span asp-validation-for=@Model.Text class="text-danger"></span>
  </div> 
  <div class="form-group">
        <label for="image">Image</label>
        <input asp-for=@Model.Upload  type="file" id="image"  />    
        <span asp-validation-for=@Model.Upload class="text-danger"></span>
  </div>
   <div class="form-group">
        <label for="price">Price</label>
        <input asp-for=@Model.Price type="text" id="price"  /> 
        <span asp-validation-for=@Model.Price class="text-danger"></span>
  </div>
   <div class="form-group">
    <label for="status">Select status</label>
    <select name="status" class="form-control" id="status" >
      <option value="True" style="font:20px;">Aktiv</option>
      <option value="False" style="font:20px; ">Aktiv deyil</option>
     
    </select>
  </div>
  <button class="btn btn-primary">Send</button>
</form>