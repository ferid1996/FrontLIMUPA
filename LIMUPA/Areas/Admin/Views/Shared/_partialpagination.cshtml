@model Pager
 <div class="container">
            @if(Model.TotalPages>0)
            {
                <ul class="pagination justify-content-end">
                    @if(1 < Model.CurrentPage)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-area="Admin" asp-controller="Home" asp-action="Users" asp-route-pg="1">First</a>
                        </li>
                         <li class="page-item ">
                            <a class="page-link" asp-area="Admin" asp-controller="Home" asp-action="Users" asp-route-pg="@(Model.CurrentPage - 1)">Previour</a>
                        </li>
                    }
                    @for (var pge=Model.StartPage;pge<=Model.EndPage;pge++)
                    {
                        <li class="page-item @(pge==Model.CurrentPage? "active":"")">
                            <a class="page-link" asp-area="Admin" asp-controller="Home" asp-action="Users" asp-route-pg="@pge">@pge</a>
                        </li>
                    }
                    @if(Model.CurrentPage < Model.TotalPages)
                    {
                         <li class="page-item">
                            <a class="page-link" asp-area="Admin" asp-controller="Home" asp-action="Users" asp-route-pg="@(Model.CurrentPage + 1)">Next</a>
                        </li>
                         <li class="page-item ">
                            <a class="page-link" asp-area="Admin" asp-controller="Home" asp-action="Users" asp-route-pg="@(Model.TotalPages)">Last</a>
                        </li>
                        
                    }
                </ul>
            }
        </div>