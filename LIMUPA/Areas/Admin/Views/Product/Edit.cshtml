
@model ProductViewModel
<form method="post" asp-area="Admin" asp-controller="Product" asp-action="Edit" enctype="multipart/form-data">
  <div class="form-group">
    <label for="name">Name</label>
    <input asp-for=@Model.Product.Name   type="text" class="form-control" id="name"  placeholder="Category name">
  </div> 
   <div class="form-group">
    <label for="CategoryName">Select Categories</label>
    <select asp-for=@Model.Product.CategoryId  class="form-control" id="CategoryName" >
        @foreach (var item in Model.Categories)
        {
            <option value="@item.Id" style="font:20px;">@item.Name</option>
        }           
    </select >
  </div>   
  <div class="form-group">   
    <label for="description">Product About</label> 
    <textarea asp-for=@Model.Product.Description class="form-control" id="description"  rows="3"></textarea>
  </div> 
  <div class="form-group">
        <label for="image">Image</label>
        <input asp-for=@Model.Product.Upload type="file" id="image"  />        
  </div>
   <div class="form-group">
        <label for="price">Price</label>
        <input asp-for=@Model.Product.Price type="text" id="price"  />        
  </div>
   <div class="form-group">
    <label for="status">Select status</label>
    <select asp-for=@Model.Product.Status class="form-control" id="status" >
      <option value="True" style="font:20px;">Aktiv</option>
      <option value="False" style="font:20px;">Aktiv deyil</option>
     
    </select>
  </div>
  <button class="btn btn-primary">Send</button>
</form>