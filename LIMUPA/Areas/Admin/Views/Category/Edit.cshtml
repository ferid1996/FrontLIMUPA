
@model Category


    <form method="post" asp-area="Admin" asp-controller="Category" asp-action="Edit" enctype="multipart/form-data"  >
      <div class="form-group">
        <label for="name"></label>
        <input asp-for=Name type="text" class="form-control" id="name" placeholder="Category name">
        <span asp-validation-for=Name></span>
      </div> 
   
      <div class="form-group">
        <label for="description">Categories About</label>
        <textarea asp-for=Description  class="form-control" id="description"   rows="3"></textarea>
        <span asp-validation-for=Description></span>
      </div>
       <div class="form-group">
        <label for="image">Image</label>
         <input asp-for=Upload type="file" id="image"  />
        <span asp-validation-for=Image></span>
      </div>
       <div class="form-group">
        <label for="status">Select status</label>
        <select asp-for=Status class="form-control" id="status"  >
          <option value="True" style="font:20px;">Aktiv</option>
          <option value="False" style="font:20px; ">Aktiv deyil</option>     
        </select>

      </div>
      <button class="btn btn-primary">Save the change</button>
</form>



