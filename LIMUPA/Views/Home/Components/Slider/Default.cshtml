 @model List<Slider>

<div class="slider-with-banner">
                <div class="container">
                   <div class="row">
                        <!-- Begin Slider Area -->
                        <div class="col-lg-12 col-md-12">
                          <div class="slider-area">
                                <div class="slider-active owl-carousel">
                                    <!-- Begin Single Slide Area -->
                                    @if(Model is object)
                        {
                            @foreach (var item in Model)
                                   {
                                        <div style="background-image: url('@Url.Content("~/uploads/"+@item.Image)');" class="single-slide align-center-left  animation-style-01 bg-1">
                                        <div class="slider-progress"></div>
                                        <div class="slider-content">
                                            <h5>@item.Text</h5>
                                            <h2>@item.Title</h2> 
                                            <h3>Starting at <span>$@item.Price</span></h3>
                                            <div class="default-btn slide-btn">
                                                <a class="links"  asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">Shopping Now</a>
                                            </div>
                                        </div>
                                    </div>
                                   }
                        }
                        
                                    <!-- Single Slide Area End Here -->
