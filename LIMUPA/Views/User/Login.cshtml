@model LoginDTO
@{
    ViewData["Title"] = "Login";
}
<div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb-30">
                            <!-- Login Form s-->
                            <form asp-controller="User" asp-action="Login" method="post" >
                                <div class="login-form">
                                    <h4 class="login-title">Login</h4>
                                    <div class="row">
                                        <div class="col-md-6 mb-20">
                                            <label asp-for=Username >Username</label>
                                            <input asp-for=Username  class="mb-0" type="text" placeholder="Username" >
                                            <span asp-validation-for=Username class="text-danger"></span>
                                        </div>
                                      
                                        <div class="col-md-6 mb-20">
                                            <label asp-for=Password>Password</label>
                                            <input asp-for=Password class="mb-0" type="password" placeholder="Password" >
                                            <span asp-validation-for=Password class="text-danger" ></span>
                                        </div>
                                      
                                        <div class="col-md-8">
                                            <div class="check-box d-inline-block ml-0 ml-md-2 mt-10">
                                                <input asp-for=RememberMe type="checkbox" >
                                                <label asp-for=RememberMe >Remember me</label>
                                            </div>
                                        </div>
                                        <div class="col-md-4 mt-10 mb-20 text-left text-md-right">
                                            <a asp-controller="User" asp-action="ForgottenPassword"> Forgotten password?</a>
                                        </div>
                                        <div class="col-md-12">
                                            <button class="register-button mt-0">Login</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>